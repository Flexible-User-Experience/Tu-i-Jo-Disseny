{% extends ':Front:layout.html.twig' %}

{% block main %}
    {# Projects section #}
    <div class="container">
        {% if projects | length > 0 %}
            <div class="row">
                {% for project in projects %}
                    <div class="col-sm-6 col-xs-12">
                        <a href="{{ path('front_project_detail', {slug: project.slug}) }}">
                            <img class="img-responsive thumb" src="{{ vich_uploader_asset(project, 'imageFile') | imagine_filter('700x495') }}" alt="{{ project.name }}">
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="row extra-m-bottom">
                <div class="col-xs-12 text-center">
                    <a href="{{ path('front_projects') }}">VEURE TOTS ELS PROJECTES <i class="fa fa-arrow-right"></i></a>
                </div>
            </div>
        {% endif %}
    </div>
    {# Services section #}
    <div class="container-fluid">
        {% if services | length > 0 %}
            <div id="services" class="carousel slide extra-m-bottom" data-ride="carousel">
                {#<!-- Wrapper for slides -->#}
                <div class="row">
                    <div class="col-xs-offset-2 col-xs-8">
                        <div class="carousel-inner">
                            {% for service in services %}
                                <div class="item{% if loop.index == 1 %} active{% endif %}">
                                    <div class="carousel-content">
                                        <div>
                                            <h3>{{ service.name }}</h3>
                                            <p>{{ service.description }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {#<!-- Controls -->#}
                <a class="left carousel-control" href="#services" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#services" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        {% endif %}
    </div>
    {# About us section #}
    <div class="container-fluid">
        <div id="about-us" class="row extra-m-bottom">
            <div class="col-xs-12">
                <img src="{{ asset('bundles/app/images/about-us.jpg') }}" alt="Secció Natros Tu&Jo Disseny" class="img-responsive">
            </div>
        </div>
    </div>
    <div class="container">

    </div>
    {# Workspace section #}
    <div class="container-fluid">
        <div id="workspace" class="row extra-m-bottom">
            <div class="col-xs-12">
                <img src="{{ asset('bundles/app/images/workspace.jpg') }}" alt="Secció Estudi Tu&Jo Disseny" class="img-responsive">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row extra-m-bottom">
            <div class="col-xs-12 text-center">
                <p class="c-black">L’estudi és un lloc lluminós, s’omple del sol del matí, blanc i fusta, net i càlid, que convida a crear.<br>Tot el nostre treball té sentit i parteix de la sensibilitat.</p>
            </div>
        </div>
    </div>
    {# Contact section #}
    <div class="container">
        <div id="contact" class="row">
            <div class="col-xs-12 text-center">
                <h5 class="c-black">HOLA!</h5>
            </div>
        </div>
        <div class="row extra-m-bottom">
            {{ form_start(contact_form) }}
            <div class="col-sm-4 col-xs-12">
                {{ form_widget(contact_form.name) }}
            </div>
            <div class="col-sm-4 col-xs-12">
                {{ form_widget(contact_form.email) }}
            </div>
            <div class="col-sm-4 col-xs-12">
                {{ form_widget(contact_form.phone) }}
            </div>
            <div class="col-xs-12">
                {{ form_widget(contact_form.message) }}
            </div>
            <div class="col-xs-12">
                {{ form_widget(contact_form.send) }}
            </div>
            {{ form_rest(contact_form) }}
            {{ form_end(contact_form) }}
        </div>
    </div>
    <div class="container-fluid">
        <div class="google-maps-container">
            {{ google_map(mapView) }}
        </div>
    </div>
{% endblock %}
