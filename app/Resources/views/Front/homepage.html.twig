{% extends ':Front:layout.html.twig' %}

{% block main %}
    {# Projects section #}
    <div class="container">
        {% if projects | length > 0 %}
            <div class="row">
                {% for project in projects %}
                    <div class="col-sm-6 col-md-4 col-xs-12">
                        {% include ':Front/includes:project-thumb.html.twig' with {project: project} %}
                    </div>
                {% endfor %}
            </div>
            <div class="row extra-m-bottom">
                <div class="col-xs-12 text-center">
                    <a href="{{ path('front_projects') }}">VEURE TOTS ELS PROJECTES <i style="margin-left:5px" class="fa fa-long-arrow-right"></i></a>
                </div>
            </div>
        {% endif %}
    </div>
    {# Services section #}
    <div class="container-fluid no-h-padding">
        {% if services | length > 0 %}
            <div id="serveis" class="carousel slide extra-m-bottom" data-ride="carousel" data-interval="false">
                {#<!-- Wrapper for slides -->#}
                <div class="carousel-inner" role="listbox">
                    {% for service in services %}
                        <div class="item{% if loop.index == 1 %} active{% endif %}">
                            <img class="img-responsive center-block" src="{{ asset('bundles/app/images/services-carousel-background.jpg') }}" alt="outline background">
                            <div class="carousel-caption">
                                <h3 class="no-m-top c-black">{{ service.name }}</h3>
                                <span class="c-black">{{ service.description | raw }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {#<!-- Controls -->#}
                <a class="left carousel-control" href="#serveis" data-slide="prev">
                    <i class="fa fa-long-arrow-left arrow-v-center" aria-hidden="true"></i>
                </a>
                <a class="right carousel-control" href="#serveis" data-slide="next">
                    <i class="fa fa-long-arrow-right arrow-v-center" aria-hidden="true"></i>
                </a>
            </div>
        {% endif %}
    </div>
    {# About us section #}
    <div class="container-fluid">
        <div id="natros" class="row extra-m-bottom">
            <img src="{{ asset('bundles/app/images/about-us.jpg') | imagine_filter('2300xY') }}" alt="Secció Natros Tu&Jo Disseny" class="img-responsive center-block">
        </div>
    </div>
    <div class="container extra-m-bottom">
        {% if partners | length > 0 %}
            {% for partner in partners %}
                <div class="row">
                    {% if loop.index is odd %}
                        <div class="col-sm-offset-1 col-sm-5 col-xs-12">
                            {% if partner.imageName %}<img class="img-responsive thumb" src="{{ vich_uploader_asset(partner, 'imageFile') | imagine_filter('480x640') }}" alt="{{ partner.name }}">{% endif %}
                        </div>
                        <div class="col-sm-5 col-xs-12">
                            <h4 class="c-black no-m-top minus-left-margin">{{ partner.name }}</h4>
                            <h6 class="c-black minus-left-margin-small m-bottom display-block">{{ partner.studies }}</h6>
                            <span class="c-black extra-m-bottom display-block">{{ partner.description | raw }}</span>
                            <div class="row">
                                <div class="col-xs-offset-1 col-xs-11">
                                    {% if partner.imageName2 %}<img class="img-responsive thumb pull-right" src="{{ vich_uploader_asset(partner, 'imageFile2') | imagine_filter('480xY') }}" alt="{{ partner.name }} 2">{% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-1"></div>
                    {% else %}
                        <div class="col-sm-offset-1 col-sm-5 col-xs-12 m-top">
                            <h4 class="c-black no-m-top minus-right-margin">{{ partner.name }}</h4>
                            <h6 class="c-black minus-right-margin-small m-bottom display-block">{{ partner.studies }}</h6>
                            <span class="c-black minus-right-margin-no-displacement extra-m-bottom display-block">{{ partner.description | raw }}</span>
                            <div class="row">
                                <div class="col-xs-11 text-right">
                                    {% if partner.imageName2 %}<img class="img-responsive thumb display-block" src="{{ vich_uploader_asset(partner, 'imageFile2') | imagine_filter('480xY') }}" alt="{{ partner.name }} 2">{% endif %}
                                </div>
                                <div class="col-xs-1"></div>
                            </div>
                        </div>
                        <div class="col-sm-5 col-xs-12 m-top">
                            {% if partner.imageName %}<img class="img-responsive thumb" src="{{ vich_uploader_asset(partner, 'imageFile') | imagine_filter('480x640') }}" alt="{{ partner.name }}">{% endif %}
                        </div>
                        <div class="col-sm-1"></div>
                    {% endif %}
                </div>
            {% endfor %}
        {% endif %}
    </div>
    {# Workspace section #}
    <div class="container-fluid">
        <div id="estudi" class="row extra-m-bottom">
            <img src="{{ asset('bundles/app/images/workspace.jpg') | imagine_filter('2300xY') }}" alt="Secció Estudi Tu&Jo Disseny" class="img-responsive center-block">
        </div>
    </div>
    <div class="container">
        <div class="row extra-m-bottom">
            <div class="col-xs-12 text-center">
                <p class="c-black">L’estudi és un lloc lluminós, s’omple del sol del matí, blanc i fusta, net i càlid, que convida a crear.<br>Tot el nostre treball té sentit i parteix de la sensibilitat.</p>
            </div>
        </div>
    </div>
    {# Contact section #}
    <div class="container">
        <div id="contacte" class="row">
            <div class="col-xs-12 text-center">
                <h5 class="c-black">HOLA!</h5>
            </div>
        </div>
        <div class="row extra-m-bottom">
            {{ form_start(contact_form) }}
            <div class="col-sm-4 col-xs-12">
                <div class="form-group">
                    {{ form_row(contact_form.name) }}
                </div>
            </div>
            <div class="col-sm-4 col-xs-12">
                <div class="form-group">
                    {{ form_row(contact_form.email) }}
                </div>
            </div>
            <div class="col-sm-4 col-xs-12">
                <div class="form-group">
                    {{ form_row(contact_form.phone) }}
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(contact_form.message) }}
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(contact_form.send) }}
                </div>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(contact_form.captcha) }}
                </div>
            </div>
            {{ form_rest(contact_form) }}
            {{ form_end(contact_form) }}
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="google-maps-container">
                {{ ivory_google_map(mapView) }}
                {{ ivory_google_api([mapView]) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery('div#bs-example-navbar-collapse-1 li a').click(function(event) {
                if (event.target.innerHTML != 'projectes' && event.target.innerHTML != 'blog') {
                    event.preventDefault();
                    jQuery('html,body').animate({scrollTop: jQuery(event.target.hash).offset().top}, "slow");
                }
            });
        });
    </script>
{% endblock %}
