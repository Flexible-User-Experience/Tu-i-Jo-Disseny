<!DOCTYPE html>
<!--[if lt IE 7]>     <html lang="{{ app.request.locale }}" class="no-js lt-ie9 lt-ie8 lt-ie7"><![endif]-->
<!--[if IE 7]>        <html lang="{{ app.request.locale }}" class="no-js lt-ie9 lt-ie8"><![endif]-->
<!--[if IE 8]>        <html lang="{{ app.request.locale }}" class="no-js lt-ie9"><![endif]-->
<!--[if gt IE 8]><!--><html lang="{{ app.request.locale }}" class="no-js"><!--<![endif]-->
<head>
    <meta name="description" content="{% block metadescription %}{# TODO set metadescription #}{% endblock %}">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="author" content="www.flux.cat">
    <meta charset="UTF-8">
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
    <title>{% block title %}{{ main_brand_title }}{% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets filter="cssrewrite,less" '@mycss' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="{% block body_class %}base{% endblock %}">
    {#<!-- Head content -->#}
    {% block header %}
        <div class="container">
            <div class="row">
                <header class="main">
                    <div class="col-xs-4 m-top">
                        <ul class="top-menu list-unstyled list-inline">
                            {% block top_left_menu %}
                                <li><a href="{{ path('front_projects') }}">{{ 'front.projects' | trans | upper }}</a></li>
                                <li><a href="#services">{{ 'front.services' | trans | upper }}</a></li>
                                <li><a href="#about-us">{{ 'front.about' | trans | upper }}</a></li>
                            {% endblock %}
                        </ul>
                    </div>
                    <div class="col-xs-4 m-bottom text-center">
                        <a class="no-text-decoration" href="{{ path('front_homepage') }}"><i class="fa-4x icon-tuijo"></i></a>
                    </div>
                    <div class="col-xs-4 m-top text-right">
                        <ul class="top-menu list-unstyled list-inline">
                            {% block top_right_menu %}
                                <li><a href="#workspace">{{ 'front.headquarter' | trans | upper }}</a></li>
                                <li><a href="{{ path('front_blog_posts_list') }}">{{ 'front.blog' | trans | upper }}</a></li>
                                <li><a href="#contact">{{ 'front.contact' | trans | upper }}</a></li>
                            {% endblock %}
                        </ul>
                    </div>
                </header>
            </div>
        </div>
    {% endblock %}
    {#<!-- Main content -->#}
    {% block main %}{% endblock %}
    {#<!-- Scroll-Top effect -->#}
    <div class="scroll-top-wrapper"><span class="scroll-top-inner"><i class="fa fa-2x fa-chevron-up"></i></span></div>
    {#<!-- Footer -->#}
    {% block footer %}
        <footer class="main">
            <div class="container">
                <div class="row">
                    <div class="col-xs-3">
                        <a class="social-network-icon" target="_blank" href="https://www.facebook.com/tuijodissenygrafic/"><i class="fa-3x icon-facebook"></i></a>
                        <a class="social-network-icon" target="_blank" href="https://www.instagram.com/tujo_disseny/"><i class="fa-3x icon-instagram"></i></a>
                        <a class="social-network-icon" target="_blank" href="https://es.pinterest.com/hidraulicadis/"><i class="fa-3x icon-pinterest"></i></a>
                    </div>
                    <div class="col-xs-6 text-center">
                        {% block bottom_contact_form %}
                            {{ render(controller('AppBundle:Front/Frontend:newsletter', {request: app.request})) }}
                        {% endblock %}
                    </div>
                    <div class="col-xs-3 text-right">
                        C. CAMPOAMOR, 20<br>
                        43870 AMPOSTA<br>
                        <br>
                        <i class="fa fa-phone"></i> 977 071 895
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="text-center">
                        <hr>
                        <i class="fa fa-copyright"></i> {{ 'now' | date('Y') }} {{ main_brand_title }}
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
    {#<!-- Javascripts -->#}
    {% block javascripts %}
        {% javascripts '@myjs' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script type="text/javascript">
            jQuery(document).ready(function() {
                var errorNode = jQuery('.has-error');
                var envelopeNode = jQuery('.fa-paper-plane-o');
                if (errorNode.length > 0) {
                    jQuery('html,body').animate({scrollTop: errorNode.offset().top - 100}, 'slow');
                }
                if (envelopeNode.length > 0) {
                    jQuery('html,body').animate({scrollTop: envelopeNode.offset().top - 100}, 'slow');
                }
            });
        </script>
    {% endblock %}
    {% block scroll_top %}
        {#<!-- Scroll-Top effect JS -->#}
        {% include ':Front/includes:scroll-to-top-js.html.twig' %}
    {% endblock %}
    {% block analytics %}
        {#<!-- Google Analytics -->#}
        {% if google_analytics_enabled %}
            <script type="text/javascript">
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
                ga('create', '{{ google_analytics_account }}', 'auto'); ga('send', 'pageview');
            </script>
        {% endif %}
    {% endblock %}
</body>
</html>
