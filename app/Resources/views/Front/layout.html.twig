<head>
    <meta name="description" content="{% block metadescription %}{% endblock %}">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="author" content="www.flux.cat">
    <meta charset="UTF-8">
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
    <title>{% block title %}{{ main_brand_title }}{% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets filter='cssrewrite,less' '@mycss' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% block extrametas %}{% endblock %}
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="{% block body_class %}base{% endblock %}">
    {#<!-- Head content -->#}
    {% block header %}
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                {#<!-- Brand and toggle get grouped for better mobile display -->#}
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand navbar-brand-logo" href="{{ path('front_homepage') }}">
                        <svg height="50" width="140" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <image height="50" width="140" class="navbar-logo" xlink:href="{{ asset('bundles/app/vectors/tu-i-jo-logo.svg') }}"></image>
                        </svg>
                    </a>
                </div>
                {#<!-- Collect the nav links, forms, and other content for toggling -->#}
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    {{ knp_menu_render('top', {currentClass: 'active'}) }}
                </div>
            </div>
        </nav>
    {% endblock %}
    {#<!-- Main content -->#}
    {% block main %}{% endblock %}
    {#<!-- Scroll-Top effect -->#}
    <div class="scroll-top-wrapper"><span class="scroll-top-inner"><i class="fa fa-2x fa-chevron-up"></i></span></div>
    {#<!-- Footer -->#}
    {% block footer %}
        <footer class="main">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-3 footer-text-left">
                        <a class="social-network-icon" target="_blank" href="https://www.facebook.com/tujodisseny/">
                            <svg height="31" width="31" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <image height="31" width="31" class="navbar-logo" xlink:href="{{ asset('bundles/app/vectors/icon-facebook.svg') }}"></image>
                            </svg>
                        </a>
                        <a class="social-network-icon" target="_blank" href="https://www.instagram.com/tujo_disseny/">
                            <svg height="31" width="31" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <image height="31" width="31" xlink:href="{{ asset('bundles/app/vectors/icon-instagram.svg') }}"></image>
                            </svg>
                        </a>
                        <a class="social-network-icon" target="_blank" href="https://es.pinterest.com/tujodisseny/">
                            <svg height="31" width="31" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <image height="31" width="31" xlink:href="{{ asset('bundles/app/vectors/icon-pinterest.svg') }}"></image>
                            </svg>
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-6 text-center">
                        {% block bottom_contact_form %}
                            {{ render(controller('AppBundle:Front/Frontend:newsletter', {request: app.request})) }}
                        {% endblock %}
                    </div>
                    <div class="col-xs-12 col-sm-3 footer-text-right">
                        C. RONDA, 30<br>
                        43870 AMPOSTA<br>
                        Tel. 977 701 224
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="text-center">
                        <hr>
                        <i class="fa fa-copyright"></i> {{ 'now' | date('Y') }} {{ main_brand_title }}
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
    {#<!-- Javascripts -->#}
    {% block javascripts %}
        {% javascripts '@myjs' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script type="text/javascript">
            jQuery(document).ready(function() {
                var errorNode = jQuery('.has-error');
                var envelopeNode = jQuery('.fa-paper-plane-o');
                if (errorNode.length > 0) {
                    jQuery('html,body').animate({scrollTop: errorNode.offset().top - 100}, 'slow');
                }
                if (envelopeNode.length > 0) {
                    jQuery('html,body').animate({scrollTop: envelopeNode.offset().top - 100}, 'slow');
                }
//                var contact_message_send = jQuery('#contact_message_send');
//                var contact_newsletter_send = jQuery('#contact_newsletter_send');
//                var blog_newsletter_send = jQuery('#blog_newsletter_send');
//                if (contact_message_send.length > 0) {
//                    console.log(contact_message_send);
//                    contact_message_send.click(function(){grecaptcha.execute();});
//                }
//                if (contact_newsletter_send.length > 0) {
//                    console.log(contact_newsletter_send);
//                    contact_newsletter_send.click(function(){grecaptcha.execute();});
//                }
//                if (blog_newsletter_send.length > 0) {
//                    console.log(blog_newsletter_send);
//                    blog_newsletter_send.click(function(){grecaptcha.execute();});
//                }
            });
        </script>
        {#<script src="//www.google.com/recaptcha/api.js?hl={{ app.request.locale }}"></script>#}
        {#<script type="text/javascript" src="//www.google.com/recaptcha/api.js?hl={{ app.request.locale }}" async defer></script>#}
    {% endblock %}
    {% block scroll_top %}
        {#<!-- Scroll-Top effect JS -->#}
        {% include ':Front/includes:scroll-to-top-js.html.twig' %}
    {% endblock %}
    {% block analytics %}
        {#<!-- Google Analytics -->#}
        {% if google_analytics_enabled %}
            <script type="text/javascript">
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
                ga('create', '{{ google_analytics_account }}', 'auto'); ga('send', 'pageview');
            </script>
        {% endif %}
    {% endblock %}
</body>
</html>
