{% extends ':Front:layout.html.twig' %}

{% block title %}{{ 'front.projects' | trans | capitalize }} Â· {{ parent() }}{% endblock %}

{% block top_left_menu %}
    <li class="current"><a href="{{ path('front_projects') }}">{{ 'front.projects' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#services">{{ 'front.services' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#about-us">{{ 'front.about' | trans | upper }}</a></li>
{% endblock %}

{% block top_right_menu %}
    <li><a href="{{ path('front_homepage') }}#workspace">{{ 'front.headquarter' | trans | upper }}</a></li>
    <li><a href="#">{{ 'front.blog' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#contact">{{ 'front.contact' | trans | upper }}</a></li>
{% endblock %}

{% block main %}
    <div class="container">
        {% if projects | length > 0 %}
            <div class="row">
                {% for project in projects %}
                    <div class="col-sm-4 col-xs-12">
                        {% include ':Front/includes:project-thumb.html.twig' with {project: project} %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
