{% extends ':Front:layout.html.twig' %}

{% block title %}{{ project.name | capitalize }} · {{ 'front.projects' | trans | capitalize }} · {{ parent() }}{% endblock %}

{% block top_left_menu %}
    <li class="active"><a href="{{ path('front_projects') }}">{{ 'front.projects' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#services">{{ 'front.services' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#about-us">{{ 'front.about' | trans | upper }}</a></li>
{% endblock %}

{% block top_right_menu %}
    <li><a href="{{ path('front_homepage') }}#workspace">{{ 'front.headquarter' | trans | upper }}</a></li>
    <li><a href="{{ path('front_blog_posts_list') }}">{{ 'front.blog' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#contact">{{ 'front.contact' | trans | upper }}</a></li>
{% endblock %}

{% block main %}

    {#<div class="container-fluid">#}
        {#<div style="height: 100%; display:table-cell; vertical-align: middle;" class="row extra-m-bottom">#}
            {#<div class="col-xs-1">#}
                {#<a href="{{ path('front_project_prev', {slug: project.slug}) }}"><i class="fa fa-3x fa-long-arrow-left"></i></a>#}
            {#</div>#}
            {#<div class="col-xs-10">#}
                {#{% if project.imageName %}#}
                    {#<img class="img-responsive thumb" src="{{ vich_uploader_asset(project, 'imageFile') | imagine_filter('1200xY') }}" alt="{{ project.name }}">#}
                {#{% endif %}#}
            {#</div>#}
            {#<div class="col-xs-1">#}
                {#<a href="{{ path('front_project_next', {slug: project.slug}) }}"><i class="fa fa-3x fa-long-arrow-right"></i></a>#}
            {#</div>#}
        {#</div>#}
    {#</div>#}


    <div class="container-fluid no-h-padding">
        <div class="carousel carousel-fade extra-m-bottom" data-ride="carousel" data-interval="false">
            {#<!-- Wrapper for slides -->#}
            <div class="row no-h-margin">
                <div class="col-xs-offset-1 col-xs-10">
                    <div class="carousel-inner no-border">
                        <div class="item active">
                            <div class="carousel-content">
                                {% if project.imageName %}
                                    <img class="img-responsive" src="{{ vich_uploader_asset(project, 'imageFile') | imagine_filter('1200xY') }}" alt="{{ project.name }}">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {#<!-- Controls -->#}
            <a class="left carousel-control no-border" href="{{ path('front_project_prev', {slug: project.slug}) }}" data-slide="prev">
                <i class="fa fa-long-arrow-left arrow-v-center" aria-hidden="true"></i>
            </a>
            <a class="right carousel-control no-border" href="{{ path('front_project_next', {slug: project.slug}) }}" data-slide="next">
                <i class="fa fa-long-arrow-right arrow-v-center" aria-hidden="true"></i>
            </a>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-10 extra-m-bottom">
                <h1 class="no-m-top c-black">{{ project.name }}</h1>
                {% if project.services | length > 0 %}
                    <h4 class="no-m-top">{{ project.services | join(', ') }}</h4>
                {% endif %}
                <p class="extra-m-top c-black">{{ project.description | raw }}</p>
            </div>
            <div class="col-xs-1"></div>
        </div>
    </div>
{% endblock %}
