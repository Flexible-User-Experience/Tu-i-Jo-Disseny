{% extends ':Front:layout.html.twig' %}

{% block title %}Confirmació newsletter · {{ parent() }}{% endblock %}

{% block top_left_menu %}
    <li><a href="{{ path('front_projects') }}">{{ 'front.projects' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#services">{{ 'front.services' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#about-us">{{ 'front.about' | trans | upper }}</a></li>
{% endblock %}

{% block top_right_menu %}
    <li><a href="{{ path('front_homepage') }}#workspace">{{ 'front.headquarter' | trans | upper }}</a></li>
    <li><a href="#">{{ 'front.blog' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#contact">{{ 'front.contact' | trans | upper }}</a></li>
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 extra-m-bottom">
                {% if msg == 'OK' %}
                    <div class="alert alert-success" role="alert">
                        <i class="fa fa-check"></i> Registre completat correctament. Gràcies.
                    </div>
                {% else %}
                    <div class="alert alert-danger" role="alert">
                        <i class="fa fa-times"></i> Ho sentim, la teva adreça no és correcta.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
