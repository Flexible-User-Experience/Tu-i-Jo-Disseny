{% extends ':Front:layout.html.twig' %}

{% block title %}{{ post.name | capitalize }} · {{ 'front.blog' | trans | capitalize }} · {{ parent() }}{% endblock %}

{% block top_left_menu %}
    <li><a href="{{ path('front_projects') }}">{{ 'front.projects' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#services">{{ 'front.services' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#about-us">{{ 'front.about' | trans | upper }}</a></li>
{% endblock %}

{% block top_right_menu %}
    <li><a href="{{ path('front_homepage') }}#workspace">{{ 'front.headquarter' | trans | upper }}</a></li>
    <li class="active"><a href="{{ path('front_blog_posts_list') }}">{{ 'front.blog' | trans | upper }}</a></li>
    <li><a href="{{ path('front_homepage') }}#contact">{{ 'front.contact' | trans | upper }}</a></li>
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 extra-m-bottom">
                <img class="media-object" src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('1200xY') }}" alt="{{ post.name }}">
            </div>
            <div class="col-xs-12">
                <h2 class="media-heading">{{ post.name }}<span class="pull-right">{{ post.publishedAt | date('d/m/Y') }}</span></h2>
                {% for tag in post.tags if tag.enabled %}
                    <h6>{{ tag.name }}</h6>
                {% endfor %}
                <p>{{ post.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}
