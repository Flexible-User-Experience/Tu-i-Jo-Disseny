{% extends ':Front:layout.html.twig' %}

{% block title %}{{ post.name | title }} · {{ 'front.blog' | trans | capitalize }} · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-8 extra-m-bottom">
                <h2 class="text-center no-m-top c-black">{{ post.name }}</h2>
                <h5 class="text-center extra-m-bottom c-black">{{ post.publishedAt | date('d/m/Y') }}</h5>
                <img class="img-responsive extra-m-bottom center-block" src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('1200xY') }}" alt="{{ post.name }}">
                <span class="c-black extra-m-bottom display-block">{{ post.description | raw }}</span>
                <hr class="c-black">
                <h4 class="text-center extra-m-top c-black">COMPARTEIX</h4>
                <ul class="list-inline m-top center-block text-center">
                    <li><a href="#">FACEBOOK</a></li>
                    <li><a href="#">PINTEREST</a></li>
                    <li><a href="mailto:?subject=Et comparteixo un article interessant&body={{ absolute_url('front_blog_posts_detail', {year: post.publishedAt | date('Y'), month: post.publishedAt | date('m'), day: post.publishedAt | date('d'), slug: post.slug}) }}">EMAIL</a></li>
                    <li><a href="#">GOOGLE+</a></li>
                    <li><a href="#">TWITTER</a></li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-4">
                <ul class="blog-tags list-unstyled center-block text-center">
                    <li class="title">SUBSCRIU-TE</li>
                </ul>
                {{ form(blog_form) }}
                {% if post.tags | length > 0 %}
                    <ul class="extra-m-top blog-tags list-unstyled center-block text-center">
                        <li class="title">CATEGORIES</li>
                        {% for tag in post.tags %}
                            <li>{{ tag.name }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
