{% extends ':Front:layout.html.twig' %}

{% block title %}{{ post.name | title }} · {{ 'front.blog' | trans | capitalize }} · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 extra-m-bottom">
                <img class="media-object" src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('1200xY') }}" alt="{{ post.name }}">
            </div>
            <div class="col-xs-12">
                <h2 class="media-heading">{{ post.name }}<span class="pull-right">{{ post.publishedAt | date('d/m/Y') }}</span></h2>
                {% for tag in post.tags if tag.enabled %}
                    <h6>{{ tag.name }}</h6>
                {% endfor %}
                <p>{{ post.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}
