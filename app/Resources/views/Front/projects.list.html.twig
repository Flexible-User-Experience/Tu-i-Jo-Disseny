{% extends ':Front:layout.html.twig' %}

{% block title %}{{ 'front.projects' | trans | capitalize }} Â· {{ parent() }}{% endblock %}

{% block headline %}{{ 'front.projects' | trans | capitalize }}{% endblock headline %}

{% block content %}
    <ul class="list-group">
        {% for project in projects %}
            <li class="list-group-item">
                {{ project }}
                <ul class="list-group">
                    {% for service in project.services if service.enabled %}
                        <li class="list-group-item">{{ service }}</li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
