{% extends ':Front:layout.html.twig' %}

{% block title %}{{ 'front.partners' | trans | capitalize }} Â· {{ parent() }}{% endblock %}

{% block headline %}{{ 'front.partners' | trans | capitalize }}{% endblock headline %}

{% block content %}
    <ul class="list-group">
        {% for partner in partners %}
            <li class="list-group-item">
                {{ partner }}
                <ul class="list-group">
                    {% for project in partner.projects if project.enabled %}
                        <li class="list-group-item">{{ project }}</li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
